<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kuning"
    tools:context=".Activity.HasilActivity">


    <LinearLayout
        android:id="@+id/ll_hasil_atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Hasil analisis dari"
        android:textColor="#ffffff"
        android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_hasil_namaMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="nama makanan"
            android:textColor="#ffffff"
            android:textSize="30sp" />
        
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/iv_hasil_GambarMakanan"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@color/cardview_dark_background"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/iv_hasil_info"
                android:layout_width="26dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|right"
                android:layout_margin="8dp"
                android:src="@drawable/ic_info" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_hasil_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tanggal"
            android:layout_gravity="center"
            android:textColor="#DFFFFFFF"
            android:textSize="15sp"/>

    </LinearLayout>

