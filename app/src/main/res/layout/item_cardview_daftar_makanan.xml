<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_cardview_home"
            android:elevation="5dp"
            android:paddingLeft="18dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_makanan"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@color/kuning"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/daftar_namaMakanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:text="username"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/daftar_currentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Date"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/abu"/>
                <TextView
                    android:id="@+id/daftar_namaPublisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama publisher"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:layout_marginStart="15dp"
                    android:textColor="@color/abu"/>

            </LinearLayout>

            
            <View
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_right_arrow"
                />



        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>